project: security-test

backends:
    test:
        type: adhoc
        allocate: |
            if [ ! -f already.ran ]; then
                touch already.ran
                cat /home/ubuntu/.config/gcloud/application_default_credentials.json
            fi
            ADDRESS localhost:22
        systems:
            - ubuntu-core-16-64:
                  username: external
                  password: ubuntu

path: /home/adhoc

restore:
    rm -rf /home/adhoc

suites:
    checks/: 
        summary: Verification tasks.

